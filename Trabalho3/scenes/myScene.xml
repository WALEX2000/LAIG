<lxs>
    <scene root="root" axis_length="0"/>

    <views default="mainFrame">
        <perspective id="mainFrame" near="0.1" far="1500" angle="45">
            <from x="30" y="10" z="30" />
            <to x="0" y="5" z="0" />
        </perspective>

        <perspective id="closeUp" near="0.1" far="1500" angle="60">
            <from x="10" y="8" z="-10" />
            <to x="-10" y="3" z="-10" />
        </perspective>

        <perspective id="victimPOV" near="0.1" far="1500" angle="60">
            <from x="-10" y="1" z="-6" />
            <to x="-11" y="20" z="-5" />
        </perspective>

        <ortho id="layout" near="0.1" far="1500" left="-40.0" right="40.0" top="20" bottom="-40">
            <from x="5" y="30" z="5" />
            <to x="5" y="0" z="5" />
            <up x="1" y="0" z="0" />
        </ortho>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="mainLight" enabled="1">
            <location x="0" y="400" z="0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>

        <spot id="alienLight(Spot)" enabled="1" angle="5" exponent="2">
            <location x="-10" y="15" z="-5" w="1"/>
            <target x="3" y="-10" z="2" />
            <ambient r="0" g="0" b="0" a="1" />
            <diffuse r=".3" g="1" b=".3" a="1" />
            <specular r=".2" g=".8" b=".2" a="1" />
            <attenuation constant="0" linear="1" quadratic="0" />
        </spot>
    </lights>

    <textures>
        <texture id="shipHull" file="scenes/images/futuristic_blue.png" />
    </textures>

    <materials>
        <material id="whiteDiffuse" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>

        <material id="blackDiffuse" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>
        
    <animations>
    </animations>

    <primitives>
        <primitive id="plane">
            <plane npartsU="4" npartsV="4"/>
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="background"/>
            </children>
        </component>

        <component id="background">
            <transformation>
                <scale x="5" y="5" z="5"/>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="tile"/>
            </children>
        </component>

        <!-- A partir daqui são especificações de como se fazem as peças e tiles do board-->
        <component id="tile">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="tileTop"/>
                <componentref id="tileSides"/>
                <componentref id="tileBottom"/>
            </children>
        </component>

        <component id="tileTop">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="plane"/>
            </children>
        </component>

        <component id="tileSides">
            <transformation>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="tileSide1"/>
                <componentref id="tileSide2"/>
                <componentref id="tileSide3"/>
                <componentref id="tileSide4"/>
            </children>
        </component>

        <component id="tileBorder">
            <transformation>
                <rotate angle="90" axis="x"/>
                <translate x="0" y="-1" z="0"/>
                <scale x="1" y="0.5" z="1"/>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="plane"/>
            </children>
        </component>

        <component id="tileSide1">
            <transformation>
                <translate x="0" y="0.01" z="0.45"/>
                <scale x="1" y="1" z="0.1"/>
            </transformation>
            <materials>
                <material id="blackDiffuse" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="plane"/>
                <componentref id="tileBorder"/>
            </children>
        </component>

        <component id="tileSide2">
            <transformation>
                <translate x="0" y="0.01" z="-0.45"/>
                <scale x="1" y="1" z="0.1"/>
            </transformation>
            <materials>
                <material id="blackDiffuse" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="plane"/>
                <componentref id="tileBorder"/>
            </children>
        </component>

        <component id="tileSide3">
            <transformation>
                <translate x="-0.45" y="0.01" z="0"/>
                <scale x="0.1" y="1" z="1"/>
            </transformation>
            <materials>
                <material id="blackDiffuse" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="plane"/>
                <componentref id="tileBorder"/>
            </children>
        </component>

        <component id="tileSide4">
            <transformation>
                <translate x="0.45" y="0.01" z="0"/>
                <scale x="0.1" y="1" z="1"/>
            </transformation>
            <materials>
                <material id="blackDiffuse" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="plane"/>
                <componentref id="tileBorder"/>
            </children>
        </component>

        <component id="tileBottom">
            <transformation>
                <translate x="0" y="-0.5" z="0"/>
                <rotate axis="x" angle="180"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="plane"/>
            </children>
        </component>


        <component id="whitePiece">
            <transformation>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="none" />
            <children>
            </children>
        </component>

        <component id="blackPiece">
            <transformation>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="none" />
            <children>
            </children>
        </component>

        <component id="whiteTile">
            <transformation>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="tile"/>
            </children>
        </component>

        <component id="blackTile">
            <transformation>
            </transformation>
            <materials>
                <material id="blackDiffuse" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="tile"/>
            </children>
        </component>

        <component id="divider">
            <transformation>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="none" />
            <children>
            </children>
        </component>
    </components>
</lxs>