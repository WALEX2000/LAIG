            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="tableLeg"/>
            </children>
        </component>

        <component id="leftBackLeg">
            <transformation>
                <translate x="-4" y="0" z="-4"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="tableLeg"/>
            </children>
        </component>

        <component id="rightBackLeg">
            <transformation>
                <translate x="4" y="0" z="-4"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="tableLeg"/>
            </children>
        </component>

        <component id="tableLeg">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="tableLegFront"/>
                <componentref id="tableLegBack"/>
                <componentref id="tableLegLeft"/>
                <componentref id="tableLegRight"/>
            </children>
        </component>

        <component id="tableLegFront">
            <transformation>
                <translate x="0" y="-3" z="0.5"/>
                <rotate axis="x" angle="90"/>
                <scale x="1" y="1" z="5"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
