            </children>
        </component>

        <component id="tableLegBack">
            <transformation>
                <translate x="0" y="-3" z="-0.5"/>
                <rotate axis="y" angle="180"/>
                <rotate axis="x" angle="90"/>
                <scale x="1" y="1" z="5"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="plane"/>
