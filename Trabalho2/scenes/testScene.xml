<lxs>
    <scene root="root" axis_length="5"/>

    <views default="mainFrame">
        <perspective id="mainFrame" near="0.1" far="1500" angle="45">
            <from x="30" y="10" z="30" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="mainLight" enabled="1">
            <location x="0" y="400" z="0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0" linear="0" quadratic="0" />
        </omni>
    </lights>

    <textures>
        <texture id="hi" file="scenes/images/wood.jpg" />
    </textures>

    <materials>
        <material id="whiteDiffuse" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>
        
    <animations>
        <animation id="spinning" >
            <keyframe instant= "2">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="20" angle_y="20" angle_z="45" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant= "4">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="-20" angle_y="-20" angle_z="90" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant= "6">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="20" angle_y="20" angle_z="135" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant= "8">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="-20" angle_y="-20" angle_z="175" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant= "10">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="20" angle_y="20" angle_z="220" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant= "12">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="265" />
                <scale x="1" y="1" z="1" />
            </keyframe>
        </animation>
    </animations>

    <primitives>
        <primitive id="plane">
            <plane npartsU="4" npartsV="4"/>
        </primitive>
        <primitive id="patch">
            <patch npointsU="4" npointsV="2" npartsU="8" npartsV="8">
                <controlpoint xx="1" yy="0.5" zz="-0.5" />
                <controlpoint xx="1" yy="0.5" zz="0.5" />
                <controlpoint xx="0.6" yy="-0.5" zz="-0.5" />
                <controlpoint xx="0.6" yy="-0.5" zz="0.5" />
                <controlpoint xx="0.2" yy="0.5" zz="-0.5" />
                <controlpoint xx="0.2" yy="0.5" zz="0.5" />
                <controlpoint xx="0" yy="-.25" zz="-0.5" />
                <controlpoint xx="0" yy="-.25" zz="0.5" />
            </patch>
        </primitive>
        <primitive id="trunk">
            <cylinder2 base="2" top="1.5" height="4" slices="16" stacks="16" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="hi" length_s="1" length_t="1"/>
            <children>
                <componentref id="palmeira" />
            </children>
        </component>

        <component id="palmeira">
            <transformation>
                <scale x="2" y="2" z="2" />
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="hi" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="trunk" />
            </children>
        </component>
    </components>
</lxs>