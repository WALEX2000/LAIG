<lxs>
    <scene root="root" axis_length="0"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="15" y="15" z="15" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="mainLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/futuristic_blue.png" />
        <texture id="pyramidBricks" file="scenes/images/futuristic_red.jpg" />
    </textures>

    <materials>
        <material id="whiteDiffuse" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="sphere">
            <sphere radius="1" slices="100" stacks="100" />
        </primitive>
        <primitive id="cylinder">
            <cylinder top="3" base="3" height="3" slices="15" stacks="30" />
        </primitive>
        <primitive id="torus">
            <torus inner = "0.5" outer = "0.1" slices="100" loops="100" />
        </primitive>
        <primitive id="pyramidFront">
            <triangle x1="-2" y1="0" z1="2" x2="2" y2="0" z2="2" x3="0" y3="2" z3="0" />
        </primitive>
        <primitive id="pyramidBack">
            <triangle x1="-2" y1="0" z1="-2" x2="2" y2="0" z2="-2" x3="0" y3="2" z3="0" />
        </primitive>
        <primitive id="pyramidLeft">
            <triangle x1="-2" y1="0" z1="2" x2="-2" y2="0" z2="-2" x3="0" y3="2" z3="0" />
        </primitive>
        <primitive id="pyramidRight">
            <triangle x1="2" y1="0" z1="2" x2="2" y2="0" z2="-2" x3="0" y3="2" z3="0" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
                <translate x="0" y="0" z="1" />
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="pyramid" />
            </children>
        </component>

        <component id="pyramid">
            <transformation>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="pyramidBricks" length_s="1" length_t="1" />
            <children>
                <primitiveref id="pyramidFront" />
                <primitiveref id="pyramidBack" />
                <primitiveref id="pyramidLeft" />
                <primitiveref id="pyramidRight" />
            </children>
        </component>
    </components>
</lxs>