<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="spikeFaceTexture" file="scenes/images/porfavor.png" />
        <texture id="spikeSidesTexture" file="scenes/images/porfavor.png" />
        <texture id="wallTexture" file="scenes/images/porfavor.png" />
        <texture id="floorTexture" file="scenes/images/porfavor.png" />
        <texture id="tubeTexture" file="scenes/images/porfavor.png" />
        <texture id="tubeInsideTexture" file="scenes/images/porfavor.png" />
        <texture id="spikeTexture" file="scenes/images/porfavor.png" />
        <texture id="hatTexture" file="scenes/images/porfavor.png" />
        <texture id="bankTexture" file="scenes/images/porfavor.jpg" />
        <texture id="bodyTexture" file="scenes/images/porfavor.png" />
        <texture id="armTexture" file="scenes/images/porfavor.png" />
        <texture id="eyeTexture" file="scenes/images/porfavor.png" />
        <texture id="shoeTexture" file="scenes/images/porfavor.png" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.5" g="0.5" b="0.5" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
        <material id="demoMaterial2" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="footTransformation">
                <translate x="0.25" y="0.25" z="0" />
                <scale x="2.5" y="1.2" z="1.2" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="backgroundRectangle">
            <rectangle x1="0" y1="0" x2="25" y2="25" />
        </primitive>
        <primitive id="rampTriangle">
            <triangle x1="0" y1="20" z1="0" x2="0" y2="0" z2 ="20" x3="20" y3="0" z3="0" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial2" />
                <material id="demoMaterial" />
            </materials>
                <texture id="none" length_s="0.5" length_t="0.5"/>
            <children>
                <primitiveref id="rampTriangle"/>
            </children>
        </component>
    </components>
</lxs>